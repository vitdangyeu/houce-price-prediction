pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                echo 'Testing something..'
            }
        }
        stage('Build') {
            steps {
                echo 'Building something..'

            }
        }
        stage('Deploy') {
            steps {
                input "Approve or not"
                echo 'Deploying something..'
            }
        }
    }
}